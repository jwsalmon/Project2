<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Book Trader!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">User name</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="jesse@booktrader.com">
          </div>
          <div class="form-group">
            <label for="example-description">Password</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Password"></textarea>
          </div>
          <button id="register" class="btn btn-primary float-right">Register</button>
          <button id="LogIn" class="btn btn-primary float-right">LogIn</button>
          <button id="Seller" class="btn btn-primary float-right">Seller</button>
          <button id="Buyer" class="btn btn-primary float-right">Buyer</button>


        </form>

      </div>
    </div>
  </div>
</div>